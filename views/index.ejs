<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
</head>

<body class="page">
    <div class="page__inner">
        <div class="header">
            <div class="container">
                <div class="header__add-new">
                    <button id="add-record">Add New Event</button>
                </div>
            </div>
        </div>
        <section class="main">
            <div class="main__inner">
                <div class="container">
                    <h1>
                        Current month celebrations: <%= currentMonth %>
                    </h1>
                    <div class="events">
                        <% for (const event of events) { %>
                            <div class="event <%= event.type %>">
                                <span class="type"><%= event.type %></span>
                                <div class="event-wrap">
                                    <div class="date">
                                        <span class="date__day">
                                            <%= event.day %>
                                        </span>
                                        <span class="date__month">
                                            <%= months[event.month - 1] %>
                                        </span>
                                    </div>
                                    <p class="event__title">
                                        <%= event.information %>
                                    </p>
                                    
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div id="backdrop"></div>
    <aside id="form">
        <%- include('./partials/form') %>
    </aside>
</body>

</html>