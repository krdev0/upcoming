<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
</head>

<body class="page">
    <div class="page__inner">
        <div class="header">
            <div class="container">
                <div class="header__add-new">
                    <button id="add-record">Add New</button>
                </div>
            </div>
        </div>
        <section class="main">
            <div class="main__inner">
                <div class="container">
                    <h1>
                        Current month celebrations: <%= currentMonth %>
                    </h1>
                    <div class="events">
                        <% for (const event of events) { %>
                            <div class="event">
                                <div class="event-wrap">
                                    <p class="event__title">
                                        <%= event.name %>
                                    </p>
                                    <p class="event__date">
                                        <%= event.date %>
                                    </p>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div id="backdrop"></div>
    <aside id="form">
        <%- include('./partials/form') %>
    </aside>
</body>

</html>